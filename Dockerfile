# Stage 1: ??????
FROM node:18-slim AS builder
WORKDIR /app

# ???????? ????? ????????????
COPY package*.json ./

# ????????????? ???????????
RUN npm ci

# ???????? ????????? ????? ???????
COPY vite.config.js ./
COPY index.html ./
COPY src ./src
COPY public ./public

# ???????? ?????? ????????? ?????? ????? vite
RUN ./node_modules/.bin/vite build 

# Stage 2: ?????? ??????
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
